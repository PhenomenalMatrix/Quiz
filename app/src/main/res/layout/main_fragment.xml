<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.MainFragment"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Quiz"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="570dp"
        android:layout_gravity="center"
        android:padding="10dp"
        >
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ar_tut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_qst_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions amount:"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/img"
            tools:ignore="MissingConstraints"
            />
        <TextView
            android:id="@+id/tv_qst_amount_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/img"
            app:layout_constraintLeft_toRightOf="@+id/tv_qst_amount"
            />
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop ="17dp"
            android:max="50"
            android:progressTint="@color/purple_200"
            android:thumbTint="@color/purple_200"
            app:layout_constraintTop_toBottomOf="@+id/tv_qst_amount_numbers"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/seekbar"
            tools:ignore="MissingConstraints"
            />
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_category"
            android:background="@drawable/style_spinner"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:id="@+id/tv_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_category"
            tools:ignore="MissingConstraints"
            />
        <Spinner
            android:id="@+id/spinner_difficulty"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_difficulty"
            android:entries="@array/spinner"
            android:background="@drawable/style_spinner"
            tools:ignore="MissingConstraints"
            />
        <Button
            android:id="@+id/btn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="65dp"
            android:text="start"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/style_main_btn"
            app:layout_constraintTop_toBottomOf="@+id/spinner_difficulty"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
</layout>