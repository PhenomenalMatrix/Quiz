<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    >

    <TextView
    android:id="@+id/cat_hist_tv"
    android:text="Category:Mixed"
    android:textStyle="bold"
    android:textSize="17sp"
    android:textColor="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/delete_hist_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/correct_answer_hist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct answers:8/9"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cat_hist_tv"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/diff_hist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Difficulty:All"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/correct_answer_hist_tv"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/date_hist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 may 2019 20:32"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/diff_hist_tv"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>